<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:paddingTop="30dp"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/btnMemory"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/border_icon"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/memory"
            app:tint="@color/startrps" />

        <ImageButton
            android:id="@+id/btnRPS"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/border_icon"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/rock_paper_scissors"
            app:tint="@color/startrps" />

        <ImageButton
            android:id="@+id/btnXO"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/border_icon"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/tic_tac_toe"
            app:tint="@color/startrps" />

        <ImageButton
            android:id="@+id/btnMemSequence"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/border_icon"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/simon"
            />

        <ImageButton
            android:id="@+id/btnPendiente"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/border_icon"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/fondot"
            app:tint="@color/startrps" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>