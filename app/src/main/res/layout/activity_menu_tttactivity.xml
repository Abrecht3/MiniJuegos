<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/startXO"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".tictactoe.MenuTTTActivity">

    <TextView
        android:id="@+id/XOTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/tic_tac_toe_title"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/XOicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="30dp"
        android:adjustViewBounds="true"
        android:padding="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tic_tac_toe"
        app:tint="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/playXO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/assetXO"
        android:gravity="center"
        android:text="@string/play"
        android:textColor="@color/white"
        android:textSize="21sp" />

</LinearLayout>