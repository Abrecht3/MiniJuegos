<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/startrps"
    tools:context=".rockpaperscissors.RPSFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/rpsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rps_title"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:id="@+id/iconRPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:padding="90dp"
            android:scaleType="fitCenter"
            android:src="@drawable/rock_paper_scissors"
            app:tint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playRPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:text="@string/play"
            android:textSize="21sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:backgroundTint="@color/assetRPS"
            android:layout_marginBottom="80dp"/>

    </LinearLayout>

</FrameLayout>